    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch test: TestServer",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "TestServer"
            ]
        },
        {
            "name": "Launch CLI tool",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "cwd": "${workspaceFolder}",
            "args": [
                "exchange-config", "${workspaceFolder}/rosenpass.toml"
            ]
        }
    ]
}